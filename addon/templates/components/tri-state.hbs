{{yield
  (hash
    isError=(component components.error)
    isSuccess=(component components.success)
    isLoading=(component components.loading)
  )
  data
  (hash
    fetch=(action 'fetchData')
    reload=(action 'reloadData')
    clear=(action 'clearData')
  )
  (hash
    isError=isError
    isSuccess=isSuccess
    isLoading=isRunning
  )
}}
